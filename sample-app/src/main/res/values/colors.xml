    <!-- TIMESTAMPS & INDICATORS                   -->
    <!-- ========================================= -->
    
    <color name="smi_timestamp">@color/placeholder_gray</color>
    <color name="smi_typing_indicator_text">@color/placeholder_gray</color>
    <color name="smi_chat_separator">#80969696</color>
    
