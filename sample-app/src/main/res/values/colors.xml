<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default Android Colors -->
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- ========================================= -->
    <!-- F1 RACEFAN AGENT - CUSTOM THEME COLORS   -->
    <!-- ========================================= -->
    
    <!-- F1 Brand Colors -->
    <color name="f1_red">#E01C24</color>
    <color name="salesforce_blue">#007ACC</color>
    <color name="agent_dark_blue">#032D60</color>
    <color name="user_dark_gray">#3A3A3A</color>
    <color name="chat_light_background">#F5F5F5</color>
    <color name="input_dark_background">#282828</color>
    <color name="border_gray">#646464</color>
    <color name="placeholder_gray">#969696</color>
    
    <!-- ========================================= -->
    <!-- NAVIGATION & HEADER                       -->
    <!-- ========================================= -->
    
    <!-- F1 Red navigation header -->
    <color name="smi_navigation_background">@color/f1_red</color>
    <color name="smi_navigation_text">@color/white</color>
    <color name="smi_navigation_icon">@color/white</color>
    
    <!-- ========================================= -->
    <!-- CHAT INTERFACE                            -->
    <!-- ========================================= -->
    
    <!-- Light gray chat background (like web) -->
    <color name="smi_chat_background">@color/chat_light_background</color>
    
    <!-- Agent message bubbles - Dark blue -->
    <color name="smi_received_bubble_background">@color/agent_dark_blue</color>
    <color name="smi_received_bubble_text">@color/white</color>
    <color name="smi_received_bubble_border">@color/agent_dark_blue</color>
    
    <!-- User message bubbles - Dark gray -->
    <color name="smi_sent_bubble_background">@color/user_dark_gray</color>
    <color name="smi_sent_bubble_text">@color/white</color>
    
    <!-- ========================================= -->
    <!-- AVATARS                                   -->
    <!-- ========================================= -->
    
    <!-- Salesforce blue avatar with white icon -->
    <color name="smi_avatar_background">@color/salesforce_blue</color>
    <color name="smi_avatar_foreground">@color/white</color>
    
    <!-- ========================================= -->
    <!-- MESSAGE INPUT FIELD                       -->
    <!-- ========================================= -->
    
    <!-- Dark input field with white text -->
    <color name="smi_input_background">@color/input_dark_background</color>
    <color name="smi_input_text">@color/white</color>
    <color name="smi_input_border">@color/border_gray</color>
    <color name="smi_input_placeholder">@color/placeholder_gray</color>
    
    <!-- ========================================= -->
    <!-- BUTTONS & ACTIONS                         -->
    <!-- ========================================= -->
    
    <!-- Call-to-action buttons - Salesforce blue -->
    <color name="smi_cta_buttons">@color/salesforce_blue</color>
    <color name="smi_cta_buttons_text">@color/white</color>
    
    <!-- Camera button colors -->
    <color name="smi_camera_button_active">@color/white</color>
    <color name="smi_camera_button_bg_active">#80FFFFFF</color>
    <color name="smi_camera_button_focused">@color/salesforce_blue</color>
    
